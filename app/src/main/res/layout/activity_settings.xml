<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_activity"
    android:background="#E3E3E3"
    tools:context=".setting.SettingsActivity"
    >


    <TextView
        android:id="@+id/up_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:fontFamily="@font/inriasans_bold"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:paddingStart="22dp"
        android:paddingTop="2dp"
        android:text="환경설정"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@id/up_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/up_bar" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="#cccccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/up_bar"/>


    <TextView
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/inriasans_bold"
        android:gravity="center_vertical"
        android:paddingStart="13dp"
        android:paddingTop="2dp"
        android:text="정보"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/up_bar" />

    <TextView
        android:id="@+id/count_all_schedule"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/search_bone"
        android:fontFamily="@font/inriasans_regular"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:text="지금까지 작성된 메모의 수 : "
        android:textSize="15dp"
        android:textColor="#000000"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/information" />

    <TextView
        android:id="@+id/how_long_use"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/search_bone"
        android:fontFamily="@font/inriasans_regular"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:text="어플 사용 기간 : "
        android:textSize="15dp"
        android:textColor="#000000"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/count_all_schedule" />

    <TextView
        android:id="@+id/how_to_use"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/search_bone"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:fontFamily="@font/inriasans_regular"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:text="어플 사용법"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/how_long_use"
        app:layout_constraintWidth_percent="0.95" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#cccccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/how_to_use" />

    <TextView
        android:id="@+id/Application_Permission"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:fontFamily="@font/inriasans_bold"
        android:gravity="center_vertical"
        android:paddingStart="13dp"
        android:paddingTop="2dp"
        android:text="접근 권한"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2" />


    <TextView
        android:id="@+id/notification_permission"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/search_bone"
        android:fontFamily="@font/inriasans_regular"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:text="접근 권한 설정"
        android:textSize="15dp"
        android:textColor="#000000"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Application_Permission" />



</androidx.constraintlayout.widget.ConstraintLayout>